<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="Driver calibration">
        <CheckBoxPreference
                android:key="swapSensorOrientation"
                android:title="Sensor orientation"
                android:summary="Swap sensor orientation"/>
        <CheckBoxPreference
                android:key="autoStart"
                android:title="Auto-start"
                android:summary="Start measuring at boot time"/>
        <EditTextPreference
                android:key="alpha"
                android:title="Alpha"
                android:summary="Alpha low pass"
                android:defaultValue="0.3"
                android:inputType="numberDecimal"/>
        <EditTextPreference
                android:key="delta"
                android:title="Delta"
                android:summary="Step duration"
                android:defaultValue="700"
                android:inputType="numberDecimal"/>
    </PreferenceCategory>

</PreferenceScreen>